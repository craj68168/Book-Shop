

<%- include('./_layouts/header') %>

<div class="row products">
    
            <div class="col-xs-12 col-md-5 p">
              <h1><%= product.title %></h1>
             <img class="spi" src="/product_images/<%= product._id %>/<%= product.image %>" alt="">
            </div> 
            <div class="col-xs-12 col-md-7 p">
              <h2><%= product.desc %></h2>
              <h3>$<%= parseFloat(product.price).toFixed(2) %></h3>
              <% if(loggedIn) { %>
                <a class="btn btn-info" href="/cart/add/<%= product.slug %>">Add to Cart</a>
                <% } else { %>
                   <p>You must logged in to continue shopping</p>
                   <% } %>
               </div> 
    
</div>
<%- include('./_layouts/footer') %>
