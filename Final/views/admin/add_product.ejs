<%- include('../_layouts/adminheader') -%>
<div class="container">
    
    <h2 class="page-title">Add a Products</h2>
    <a href="/admin/products" class="btn btn-primary">Back to all Products</a>
    <br><br>
    
    <form action="/admin/products/add-product" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Enter Title">
    </div>
    
    <div class="form-group">
        <label for="">Desc</label>
       <textarea name="desc" class="form-control" cols="5" rows="5" placeholder="Desc"><%= desc %></textarea>
    </div>
    <div class="form-group">
        <label for="">Categories</label>
        <select name="category" id="" class="form-control" >
            <% categories.forEach((cat)=> { %>
            <option value="<%= cat.slug %>"><%= cat.title %></option>
           <% }) %>
        </select>
    </div>
    <div class="form-group">
        <label for="">Price</label>
        <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Enter price">
    </div>
    <div class="form-group">
        <label for="">Image</label>
        <input type="file" name="image" class="form-control" id="img" accept="image/*">
        <img src="#" alt="" id="imgPreview">
    </div>
    <button class="btn btn-primary">Submit</button>
    </form>

</div>

<script>

    // to show the imgae below the image button file 
    
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
</script>
    
<%- include('../_layouts/adminfooter') -%>