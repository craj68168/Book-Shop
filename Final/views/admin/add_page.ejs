<%- include('../_layouts/adminheader') -%>
<div class="container">
    
    <h2 class="page-title">Add a Pages</h2>
    <a href="/admin/pages" class="btn btn-primary">Back to all Pages</a>
    <br><br>
    
    <form action="/admin/pages/add-pages" method="POST">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Enter Title">
    </div>
    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Enter Slug">
    </div>
    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
    </div>
    <button class="btn btn-primary">Submit</button>
    </form>

</div>
    
<%- include('../_layouts/adminfooter') -%>